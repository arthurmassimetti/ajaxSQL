@model List<Framework.Model.ClienteModel>
@{
    Layout = null;
}
<style>
    /* Centraliza o formulário no meio da tela */
    form {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    /* Adiciona um espaçamento entre cada linha de input */
    input {
        margin-bottom: 10px;
    }

    /* Centraliza o botão "Salvar" na parte inferior do formulário */
    button {
        margin: 0 auto;
    }
</style>

<!DOCTYPE html>
<body class="canto">
    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Lista</title>
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css">
        <style>
            body {
                font-family: Arial;
                font-size: 12px;
            }
        </style>

    </head>
    <body>
        <div>
            <table id="example" class="display" style="width:100% bg-white">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>email</th>
                        <th>Celular</th>
                        <th>Idade</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ClienteId</td>
                            <td>@item.Nome</td>
                            <td>@item.Email</td>
                            <td>@item.Celular</td>
                            <td>@item.Idade</td>
                        </tr>

                    }
                </tbody>
            </table><br />
            <br />
            <br />
            <br />
            <a href="/Cliente/ListaAjax/" target="_blank">Tabela Ajax</a><br />


        </div>
        <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
        <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
        <script>
            $(function () {
                new DataTable('#example');
            });
        </script>
    </body>
</html>
</body>
